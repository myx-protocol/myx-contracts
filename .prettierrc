{
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "bracketSpacing": true
            }
        },
        {
            "files": "*.sol",
            "options": {
                "plugins": ["prettier-plugin-solidity"],
                "parser": "solidity-parse",
                "printWidth": 100,
                "tabWidth": 4,
                "semi": true,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        }
    ]
}
